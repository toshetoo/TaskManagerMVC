@using TaskManagerMVC.Services;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-left">
        @Html.ActionLink("Task Manager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <ul class="nav navbar-nav">
            @if (AuthenticatonService.LoggedUser == null)
            {
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                        <li>@Html.ActionLink("Register", "Register", "Account")</li>
            }
            else
            {
                <li>@Html.ActionLink("Users", "List", "User")</li>
                        <li>@Html.ActionLink("Tasks", "List", "Task")</li>
                        <li>@Html.ActionLink("Projects", "List", "Projects")</li>
            }
        </ul>
        @if (AuthenticatonService.LoggedUser != null)
        {
            <ul class="nav navbar-nav navbar-right"><li>@Html.ActionLink("Logout", "Logout", "Account")</li></ul>
        }
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
